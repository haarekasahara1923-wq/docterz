# ─── NEON DATABASE (PostgreSQL) ───────────────────────────────────────────────
# Neon Console → Project → Connection Details

# Pooled connection URL (use this for runtime / app queries)
# Format: postgresql://user:pass@ep-xxx.ap-southeast-1.aws.neon.tech/docterz?sslmode=require&pgbouncer=true
DATABASE_URL="postgresql://username:password@ep-xxx-xxx.ap-southeast-1.aws.neon.tech/docterz?sslmode=require&pgbouncer=true&connect_timeout=15"

# Direct URL (used ONLY for Prisma migrations - NOT for runtime)  
# Same as above but WITHOUT ?pgbouncer=true
DIRECT_URL="postgresql://username:password@ep-xxx-xxx.ap-southeast-1.aws.neon.tech/docterz?sslmode=require&connect_timeout=15"

# ─── JWT ──────────────────────────────────────────────────────────────────────
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"
JWT_REFRESH_SECRET="your-refresh-token-secret-minimum-32-characters-long"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ─── APP ──────────────────────────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Docterz"
NODE_ENV="development"

# ─── REDIS (Upstash recommended for Vercel) ───────────────────────────────────
# Sign up free at https://upstash.com
REDIS_URL="redis://default:password@us1-xxx.upstash.io:6379"

# ─── EMAIL (SMTP) ─────────────────────────────────────────────────────────────
# Use Gmail App Password: Google Account → Security → App Passwords
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-16-char-app-password"
SMTP_FROM="Docterz <noreply@docterz.in>"

# ─── FILE STORAGE (Cloudflare R2 recommended for India) ──────────────────────
AWS_ACCESS_KEY_ID="your-r2-access-key"
